<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => Profile %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @profile.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @profile.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:skill) %></dt>
      <dd><pre class="prettyprint"><%= @profile.skill %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:open) %></dt>
      <dd><pre class="prettyprint"><%= @profile.open %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:github) %></dt>
      <dd><pre class="prettyprint"><%= @profile.github %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:linkedin) %></dt>
      <dd><pre class="prettyprint"><%= @profile.linkedin %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ga) %></dt>
      <dd><pre class="prettyprint"><%= @profile.ga %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:other) %></dt>
      <dd><pre class="prettyprint"><%= @profile.other %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              profiles_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_profile_path(@profile), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

