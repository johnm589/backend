<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :title %>
    <%= f.association :user %>
    <%= f.input :skill %>
    <%= f.input :open %>
    <%= f.input :github %>
    <%= f.input :linkedin %>
    <%= f.input :ga %>
    <%= f.input :other %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
